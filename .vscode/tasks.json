{
  // tasks.json 形式の詳細についての資料は、
  // https://go.microsoft.com/fwlink/?LinkId=733558 をご覧ください
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        {
          "owner": "glsl",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern":[
            {
              "regexp": "^([^:]+):\\s([^:]+):(\\d+):(.+)$",
              "severity": 1,
              "file": 2,
              "location": 3,
              "message": 4,
            }
          ]
        }
      ]
    },
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "group": "build",
      "problemMatcher": [
        {
          "owner": "glsl",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "background": {
            "activeOnStart": false,
            "beginsPattern": "^\\[node-shader-compiler\\]:BeginCompile$",
            "endsPattern": "^\\[node-shader-compiler\\]:EndCompile$"
          },
          "pattern":[
            {
              "regexp": "^([^:]+):\\s([^:]+):(\\d+):(.+)$",
              "severity": 1,
              "file": 2,
              "location": 3,
              "message": 4,
            }
          ]
        }
      ]
    }
  ]
}